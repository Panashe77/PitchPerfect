        <article>
            <h1><%= article.title %></h1>
            <% if (article.image) { %>
                <img src="<%= article.image %>" alt="<%= article.title %>" class="article-image">
            <% } %>
            <p>Author: <%= article.author %></p>
            <div style="white-space: pre-wrap;">
                <%= article.content %>
            </div>
        </article>
        <div class="comment-section">
            <!-- Comment section content here -->
        </div>
    </main>
